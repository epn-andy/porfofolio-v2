# /etc/portfolio/env
#
# Copy to VPS:   sudo cp deploy/env.example /etc/portfolio/env
# Permissions:   sudo chmod 600 /etc/portfolio/env
#                sudo chown root:www-data /etc/portfolio/env
#
# ASP.NET Core maps __ -> : so these override appsettings.json at runtime.

ConnectionStrings__DefaultConnection=Host=localhost;Database=portfolio_db;Username=portfolio_user;Password=CHANGE_ME

JwtSettings__SecretKey=REPLACE_WITH_256_BIT_RANDOM_SECRET
JwtSettings__Issuer=PortfolioAPI
JwtSettings__Audience=PortfolioApp
JwtSettings__ExpiryMinutes=1440

AllowedOrigins__0=https://YOUR_DOMAIN
